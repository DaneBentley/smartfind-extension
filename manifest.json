{
  "manifest_version": 3,
  "name": "SmartFind: AI-Enhanced Search",
  "version": "1.0",
  "description": "Search web pages using natural language questions. Use Ctrl+F (Cmd+F on Mac) to start.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "webNavigation"
  ],
  "host_permissions": [
    "https://smartfind-api.vercel.app/*",
    "https://accounts.google.com/*",
    "https://*.supabase.co/*"
  ],
  "oauth2": {
    "client_id": "148916188620-nln6nq5kn23hm435g0i7mrs72becjqb2.apps.googleusercontent.com",
    "scopes": ["email", "profile"]
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "SmartFind: AI-Enhanced Search",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "auth.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "toggle-smartfind": {
      "suggested_key": {
        "default": "Ctrl+F",
        "mac": "Cmd+F",
        "windows": "Ctrl+F",
        "linux": "Ctrl+F"
      },
      "description": "Toggle the SmartFind search bar"
    }
  }
}