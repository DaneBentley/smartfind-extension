{
  "manifest_version": 3,
  "name": "SmartFind: AI-Enhanced Search",
  "version": "1.0",
  "description": "AI-powered web page search. Press / for natural language questions, ' for keyword search. Enhanced find functionality with intelligent highlighting.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "webNavigation"
  ],
  "host_permissions": [
    "https://smartfind-api.vercel.app/*",
    "https://accounts.google.com/*",
    "https://*.supabase.co/*"
  ],
  "oauth2": {
    "client_id": "148916188620-nln6nq5kn23hm435g0i7mrs72becjqb2.apps.googleusercontent.com",
    "scopes": ["email", "profile"]
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "SmartFind: AI-Enhanced Search",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "auth.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}